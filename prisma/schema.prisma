generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  name       String 
  email      String  @unique
  image      String
  password   String?

  // Opposite relation field to the creator in Prompt
  prompts    Prompt[]  @relation("UserPrompts")  

  @@map("users")
}

model Prompt {
  id        Int     @id @default(autoincrement())
  prompt    String
  tag       String
  creatorId Int     // Foreign key field

  // Relation field referencing User model
  creator   User    @relation(fields: [creatorId], references: [id], name: "UserPrompts")

  @@map("prompts")
}
